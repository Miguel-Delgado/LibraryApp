<Window x:Class="LibraryApp.Views.BookEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Книга" Height="550" Width="450"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Название:" Margin="0,0,0,5" FontWeight="Bold"/>
        <TextBox Grid.Row="1" x:Name="TitleBox" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="2" Text="Автор:" Margin="0,0,0,5" FontWeight="Bold"/>
        <ComboBox Grid.Row="3" x:Name="AuthorCombo" DisplayMemberPath="LastName" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="4" Text="Жанр:" Margin="0,0,0,5" FontWeight="Bold"/>
        <ComboBox Grid.Row="5" x:Name="GenreCombo" DisplayMemberPath="Name" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="6" Text="Год издания:" Margin="0,0,0,5" FontWeight="Bold"/>
        <TextBox Grid.Row="7" x:Name="YearBox" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="8" Text="ISBN (формат: 978-5-699-12014-7):" Margin="0,0,0,5" FontWeight="Bold"/>
        <TextBox Grid.Row="9" x:Name="ISBNBox" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="10" Text="Количество в наличии:" Margin="0,0,0,5" FontWeight="Bold"/>
        <TextBox Grid.Row="11" x:Name="QuantityBox" Margin="0,0,0,15"/>

        <StackPanel Grid.Row="12" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Click="Save_Click" Width="90" Margin="0,0,5,0"/>
            <Button Content="Отмена" Click="Cancel_Click" Width="90"/>
        </StackPanel>
    </Grid>
</Window>