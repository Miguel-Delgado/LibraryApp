<Window x:Class="LibraryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Библиотека" Height="600" Width="1100">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Поиск -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Поиск по названию:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="SearchBox" Width="250" Margin="0,0,10,0"/>
            <Button Content="Найти" Click="Search_Click" Width="70" Margin="0,0,5,0"/>
            <Button Content="Сбросить" Click="ResetFilter_Click" Width="70"/>
        </StackPanel>

        <!-- Фильтры -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Автор:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="AuthorFilter" Width="150" Margin="0,0,15,0" DisplayMemberPath="LastName"/>
            <TextBlock Text="Жанр:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="GenreFilter" Width="150" Margin="0,0,10,0" DisplayMemberPath="Name"/>
            <Button Content="Применить" Click="Filter_Click" Width="80"/>
        </StackPanel>

        <!-- Кнопки управления авторами и жанрами (слева) -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="📚 Авторы" Click="ManageAuthors_Click" Width="120" Margin="0,0,10,0" Height="30"/>
            <Button Content="📂 Жанры" Click="ManageGenres_Click" Width="120" Margin="0,0,10,0" Height="30"/>
            <TextBlock Text="Управление справочниками" VerticalAlignment="Center" FontStyle="Italic" Foreground="Gray"/>
        </StackPanel>

        <!-- Таблица книг -->
        <DataGrid x:Name="BooksGrid" Grid.Row="3" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,10"
                  SelectionMode="Single" SelectionUnit="FullRow">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Автор" Binding="{Binding Author.LastName}" Width="150"/>
                <DataGridTextColumn Header="Жанр" Binding="{Binding Genre.Name}" Width="120"/>
                <DataGridTextColumn Header="Год" Binding="{Binding PublishYear}" Width="60"/>
                <DataGridTextColumn Header="ISBN" Binding="{Binding ISBN}" Width="130"/>
                <DataGridTextColumn Header="В наличии" Binding="{Binding QuantityInStock}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопки CRUD (справа внизу) -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="➕ Добавить" Click="AddBook_Click" Width="120" Margin="0,0,5,0" Height="30"/>
            <Button Content="✏️ Редактировать" Click="EditBook_Click" Width="120" Margin="0,0,5,0" Height="30"/>
            <Button Content="🗑️ Удалить" Click="DeleteBook_Click" Width="100" Height="30"/>
        </StackPanel>
    </Grid>
</Window>